{{#if user}}
{{#if user.eAdm}}

<h3>EDITAR POSTAGEM:</h3>
<div class="card">
    <div class="card-body">
        <form action="" method="post">
            <label for="name">NOME DA POSTAGEM:</label>
            <input type="text" name="name" id="name" class="form-control" value="{{postagem.name}}" required>
            <label for="slug">SLUG DA POSTAGEM:</label>
            <input type="text" name="slug" id="slug" class="form-control" value="{{postagem.slug}}" required> <br>
            <label for="conteudo">CONTEUDO DA POSTAGEM:</label>
            <textarea name="conteudo" id="conteudo" class="form-control" required>{{postagem.conteudo}}</textarea>
            <label for="categoria">CATEGORIA DA POSTAGEM:</label>
            <select name="categoria" id="categoria" class="custom-select">
                {{#each categoria}}
                    <option value="{{_id}}">{{name}}</option>
                    {{else}}
                    <option value="0">NENHUMA CATEGORIA REGISTRADA</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-3">ADICIONAR</button>
        </form>
    </div>
</div>

{{/if}}
{{/if}}